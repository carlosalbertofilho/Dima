@page "/categorias"
@inherits ListCategoryPage

<MudText Typo="Typo.h3">Categorias</MudText>

<div class="d-flex justify-end">
    <MudButton
        Variant="Variant.Filled"
        Color="Color.Primary"
        StartIcon="@Icons.Material.TwoTone.Add"
        Href="/categorias/adicionar">
        Nova Categoria
    </MudButton>
</div>

<MudDataGrid
    Class="mt-5"
    Items="@Categories"
    Filterable="true"
    QuickFilter="SearchFunc"
    Hideable="true">
    <ToolBarContent>
        <MudText Typo="Typo.h6">Categorias</MudText>
        <MudSpacer/>
        <MudTextField
            @bind-Value="@SearchText"
            Placeholder="Filtra..."
            Adornment="Adornment.Start"
            AdornmentIcon="@Icons.Material.Filled.Search"
            Immediate="true"
            IconSize="Size.Medium"
            Class="mt-2"/>
    </ToolBarContent>
    <Columns>
        <PropertyColumn Property="c => c.Id" Title="#" sortable="true" />
        <PropertyColumn Property="c => c.Title" Title="Categoria" sortable="true" />
        <TemplateColumn>
            <MudStack Row>
                <MudIconButton
                    Icon="@Icons.Material.Filled.Edit"
                    Color="Color.Primary"
                    arial-label="Editar"/>
                
                <MudIconButton
                    Icon="@Icons.Material.Filled.Delete"
                    Color="Color.Error"
                    arial-label="Excluir" />
            </MudStack>
        </TemplateColumn>
    </Columns>
</MudDataGrid>