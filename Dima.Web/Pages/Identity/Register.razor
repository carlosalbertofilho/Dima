@page "/registra"
@layout HeadlessLayout
@inherits RegisterPage

<PageTitle>Dima - Cadastro</PageTitle>

<MudGrid Justify="Justify.Center">
    <MudItem sm="12" md="8" lg="6">
        <MudPaper Class="mud-width-full pa-8">
            <div class="d-flex justify-center pb-8 pt-8">
                <img src="imgs/dima.png" alt="Dima - Controle Financeiro" width="200"/>
            </div>
            <EditForm Model="@InputModel" OnValidSubmit="OnValidSubmitAsync">
                <DataAnnotationsValidator/>

                <MudTextField
                    T="string"
                    Label="E-mail"
                    HelperText="Campo Obrigatório"
                    InputType="InputType.Email"
                    For="@(() => InputModel.Email)"
                    @bind-Value="InputModel.Email"/>
                <MudTextField
                    T="string"
                    Label="Senha"
                    HelperText="Campo Obrigatório"
                    InputType="InputType.Password"
                    For="@(() => InputModel.Password)"
                    @bind-Value="InputModel.Password"/>
                <div class="d-flex mt-8">
                    @if (IsBusy)
                    {
                        <MudProgressCircular Color="Color.Info" Indeterminate="true"/>
                    }
                    else
                    {
                        <MudButton
                            ButtonType="ButtonType.Submit"
                            Color="Color.Primary"
                            Variant="Variant.Filled"
                            Class="mr-4">COMEÇAR
                        </MudButton>
                        <MudSpacer/>
                        <MudButton Href="/login" Color="Color.Primary">Já tenho uma Conta</MudButton>
                    }
                </div>
            </EditForm>
        </MudPaper>
    </MudItem>
</MudGrid>